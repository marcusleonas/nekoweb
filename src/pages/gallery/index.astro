---
import Base from "../../layouts/base.astro";
import { images } from "../../data/images";
---

<Base title="photo gallery">
  <section class="box">
    <h1>photo gallery</h1>
    <p>
      very high-quality, professional photos taken with my iphone 14 and not
      compressed in any way at all.....
    </p>
    <div class="photos">
      {images.map((image) => <img src={image.src} alt={image.alt} />)}
    </div>
  </section>
</Base>

<style>
  .photos {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    max-height: 600px;
    overflow-y: auto;
  }
  .photos img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
