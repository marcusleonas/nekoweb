---
import "../../styles/resets.css";
import "../../styles/globals.css";
import "@fontsource/iosevka";
import "@fontsource/iosevka-aile";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;

const defaultTitle = "★ n3bula's site ★";
const titleSuffix = "nebula's site";
const defaultDesc = "little corner of the internet ran by a silly goober";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<meta
  name="description"
  content={description !== undefined ? description : defaultDesc}
/>

<meta
  property="og:title"
  content={title !== undefined ? `${title} - ${titleSuffix}` : defaultTitle}
/>
<meta
  property="og:description"
  content={description !== undefined ? description : defaultDesc}
/>
<meta
  property="og:image"
  content={image !== undefined
    ? image
    : "/assets/img/ladybird-purple-on-black.png"}
/>
<meta property="og:logo" content="/assets/img/avatar-black-purple.png" />

<!-- Google fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
  rel="stylesheet"
/>

<title>
  {title !== undefined ? `${title} - ${titleSuffix}` : defaultTitle}
</title>

<link rel="icon" href="/favicon.ico" />
